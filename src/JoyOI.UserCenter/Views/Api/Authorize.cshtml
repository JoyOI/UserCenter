@model Application
<html>
<head>
    <link href="~/styles/sign-in-style.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.2.1.min.js"></script>
    <script src="~/scripts/sign-in.js"></script>
</head>
<body>
    <form asp-action="Authorize" asp-controller="Api" asp-route-id="@ViewContext.RouteData.Values["id"]" class="sign-in-box">
        <div class="sign-in-float-box">
            <div class="sign-in-logo-outer">
                <img src="~/images/logo-bk.png" style="height: 100px;" />
            </div>
            <div class="sign-in-textbox-outer">
                <div class="sign-in-textbox-label">@SR["Username or email"]</div>
                <input type="text" class="sign-in-textbox" />
            </div>
            <div class="sign-in-textbox-outer">
                <div class="sign-in-textbox-label">@SR["Password"]</div>
                <input type="password" class="sign-in-textbox" />
            </div>
            <div class="sign-in-textbox-outer">
                <label class="sign-in-textbox-label">
                    <input type="checkbox" class="sign-in-checkbox" />
                    <span>@SR["Remember me"]</span>
                </label>
            </div>
            <div class="sign-in-textbox-outer">
                <input type="submit" value="@SR["Sign In"]" class="sign-in-button" />
            </div>
            <div class="sign-in-textbox-outer sign-in-links">
                <a href="#">@SR["Register"]</a>
                <a href="#">@SR["Forgot"]</a>
            </div>
        </div>
        <div class="sign-in-content">
            <div class="sign-in-content-title">@SR["{0} is requesting your authorization", Model.Name]</div>
            <ul>
                <li>获取您的头像和昵称</li>
                <li>更新或设置您的头像及昵称</li>
                <li>操作您的跨应用虚拟货币</li>
                <li>获取您的电子邮箱地址及手机号码</li>
                <li>给您发送邮件或短信</li>
                <li>在外部（第三方）应用中进行私信操作</li>
            </ul>
        </div>
        <input type="hidden" name="callbackurl" value="@Context.Request.Query["callbackurl"]" />
    </form>
    <div class="sign-in-copyright">Copyright © @DateTime.Now.Year @SR["Beijing Tsba Education And Technologies Co., Ltd."]</div>
</body>
</html>