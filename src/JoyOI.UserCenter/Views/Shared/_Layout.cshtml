<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="referrer" content="origin" />
    <meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1, user-scalable=no" />
    <link rel="icon" href="~/images/icon.png">
    <title>@ViewBag.Title - JoyOI Forum</title>
    <link href="~/styles/joyoi.base.min.css" rel="stylesheet" />

    <script src="~/scripts/joyoi.base.min.js"></script>
    <script src="~/scripts/jquery.autoajax.js"></script>
    <script src="~/scripts/jquery.pomelo.fileupload.js"></script>
    <script src="~/signalr/js"></script>
    <script src="~/scripts/joyoi.extend.js"></script>
</head>
<body class="home-template fixed-navbar">
    <!-- start header -->
    <header class="main-header">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-list mobile-menu"></i>
                    </button>
                    <!-- start logo -->
                    <a class="navbar-logo" asp-controller="Home" asp-action="Index"><img src="~/images/logo-bk.png" /></a>
                    <!-- end logo -->
                </div>
                @Html.Partial("_Navigator")
            </div>
        </nav>
    </header>
    <!-- end header -->

    <div class="cover cover-single mobile-cover @(IsSectionDefined("Navigator") == false ? "" : "cover-url")">
        <div class="cont-wrap">
            <div class="grid_12 mobile-cover-center" style="text-align:left">
                <img src="~/images/logo.png" class="mobile-cover-img"  style="height:140px;margin-top:-60px;" />
            </div>
        </div>
        @if (IsSectionDefined("Navigator"))
        {
            <div class="cover-url-inner">
                <div class="cont-wrap">
                    <div class="grid_12" style="text-align:left">
                        @RenderSection("Navigator")
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="main-content-area">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    @Html.Partial("_Footer")
    <a href="#" id="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <div class="search-popup">
        <div class="close-button">
            <i class="material-icons">&#xE5C9;</i>
        </div>
        <div class="container popup-inner">
            <div class="row">
                <div class="col-sm-12">
                    <form>
                        <div class="input-group">
                            <input type="email" class="required" id="search-input">
                            <span class="bar"></span>
                            <label>Type to search</label>
                        </div>
                        <!-- <input type="text"  placeholder="" /> -->
                    </form>
                    <div id="search-results">

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>