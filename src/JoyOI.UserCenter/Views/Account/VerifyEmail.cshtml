@{
    Layout = null;
}
<html>
<head>
    <link href="~/styles/register.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.2.1.min.js"></script>
    <script src="~/scripts/register.js"></script>
</head>
<body>
    <div class="logo">
        <img src="~/images/logo.png" />
    </div>
    <form asp-action="VerifyEmail">
        <div class="content">
            <div class="trapezoid">
                <div class="trapezoid-main">
                    <div class="trapezoid-inner">@SR["Register"]</div>
                </div>
            </div>
            <div class="detail-outer">
                <div class="textbox-label">@SR["Email address"]</div>
                <input type="text" class="textbox" value="@ViewBag.Email" disabled />
            </div>
            <div class="detail-outer">
                <div class="textbox-label">@SR["Username"]</div>
                <input type="text" class="textbox" name="username" />
            </div>
            <div class="detail-outer">
                <div class="textbox-label">@SR["Nickname"]</div>
                <input type="text" class="textbox" name="nickname" />
            </div>
            <div class="detail-outer">
                <div class="textbox-label">@SR["Password"]</div>
                <input type="password" class="textbox" name="password" />
            </div>
            <div class="detail-outer">
                <div class="textbox-label">@SR["Confirm Password"]</div>
                <input type="password" class="textbox" name="confirm" />
            </div>
            <div class="button-outer">
                <input type="submit" value="@SR["Submit"]" class="button" />
            </div>
        </div>
        <input type="hidden" value="@ViewBag.AesEmail" name="email" />
        <input type="hidden" value="@ViewBag.Referer" name="referer" />
    </form>
    <div class="copyright">Copyright © @DateTime.Now.Year @SR["Beijing Tsba Education And Technologies Co., Ltd."]</div>
</body>
</html>