@model IEnumerable<ApplicationViewModel>
@{ 
    ViewBag.Title = SR["Applications"];
}

@section Navigator {
    <div class="columns">
        <div class="location-path">
            / <a href="/">JoyOI</a> /
        </div>
        <h1 class="location-current" data-emoji-enabled="">@SR["Applications"]</h1>
    </div>
}

<div class="container">
    <div class="cont-wrap">
        <div class="grid_9">
            <div class="application-outer">
                @if (Model.Count() > 0)
                {
                    @foreach (var x in Model)
                    {
                        <div class="application-item">
                            <img src="~/blob/download/@x.IconId" class="application-item-icon" />
                            <div class="application-item-content">
                                <div class="application-item-title">@x.Name</div>
                                <div class="application-item-details">@x.Description</div>
                            </div>
                            @if (x.Role == "OwnedApplication")
                            {
                                <a class="application-item-btn" asp-action="ApplicationManager">@SR["Managers"]</a>
                                <a class="application-item-btn" asp-action="ApplicationSecret">@SR["Secret"]</a>
                            }
                            <a class="application-item-btn" asp-action="ApplicationCustomers">@SR["Customers"]</a>
                            <div class="clear"></div>
                        </div>
                    }
                }
                else
                {
                    <div class="application-no-result">@SR["No application found."]</div>
                }
            </div>
        </div>

        @await Html.PartialAsync("_Sidebar")
    </div>
</div>
